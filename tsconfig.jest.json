{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ] /* Specify multiple folders that act like './node_modules/@types'. */,

    "types": ["jest"],
    "baseUrl": "./src" /* Specify the base directory to resolve non-relative module names. */,
    "paths": {
      "@domain/*": ["domain/*"], // Example path alias for domain
      "@infra/*": ["infra/*"], // Example path alias for infra
      "@package/*": ["package/*"], // Example path alias for package
      "@usecases/*": ["usecases/*"] // Example path alias for usecase
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
